
<div class="article-card">
    <% for article in @articles_filtered %>
        <div class="article-content">
            <div class="article-img">
                <%= image_tag article.image.url(:medium) %> <br>
            </div>
            <div class="article-text">
                <h5>
                    <% @category_name.each do |category| %>
                        <%= category.name %>
                    <% end %>
                </h5>
                <%= article.title %> <br>
                <%= article.text %> <br>
            </div>
        </div>
    <% end %>
</div>



