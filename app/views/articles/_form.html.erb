<%= form_for @article, html: { multipart: true } do |form| %>
<div class="row" id="form-article">
  <div class="col-md-6 col-md-offset-3">
  <% if article.errors.any? %>
    <div id="error_explanation" class = "alert alert-danger">
      <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
        <% article.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

    <%= form.file_field :image, class: "btn btn-primary" %> <br>

    <%= form.fields_for :categories do |f| %>
        <%= f.label :category %>
        <select name="id", class = "form-control">
          <% category_all.each do |category| %>
        <option value="<%= category.id %>"><%= category.name %></option>
      <% end %>
      </select>
    <% end %>

    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control' %>

    <%= form.label :text %>
    <%= form.text_area :text, class: 'form-control' %>

    <%= form.submit yield(:text), class: "btn btn-primary form-control" %>
<% end %>

  </div>
</div>
