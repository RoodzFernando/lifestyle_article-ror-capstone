<% provide(:title, "Homepage") %>

    <div class="article-home">
        <% article_all.each do |article| %>
            <div class="article-home-card">
                <div class="article-img">
                    <div class="article-text">
                        <h2><%= link_to article.title, article_path(article.id) %></h2>
                        <p><%= article.text  %></p>
                    </div>
                    <%= image_tag article.image.url()%>
                </div>
        <% end %>
            </div>

        <div class="user-info">
            <h3><%= current_user.name.titleize if logged_in? %></h3>
            <h4>has <%= pluralize(current_user.articles.count, 'Article') %></h4>
            <h4>Member since: <%= time_ago_in_words(current_user.created_at) %></h4>
        </div>
    </div>

    <div class="category_name">
        <% for category in category_list %>
                <div class="category-item">
                    <div class="category-name">
                        <h3><%= link_to category.name, category_path(category.category_id) %><h3>
                    </div>
                    <div class="category-title">
                        <h4><%= link_to category.title, article_path(category.id) %><h4>
                    </div>
                    <%=  image_tag category.image.url() %>
                </div>
        <% end %>
    </div>


